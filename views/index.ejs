<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DB Explorer</title>

    <!-- Link to Boostrap 4-->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh"
      crossorigin="anonymous"
    />

    <link
      href="https://fonts.googleapis.com/css?family=Neuton&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <nav class="navbar">
      <a class="navbar-brand" href="#">DBExplorer</a>
    </nav>

    <div class="container">
      <h1>Welcome to DBExplorer! go ahead and choose a database to look into!</h1>
      <div class="listDbs">
        <h2>Select a database: </h2>

        <select name="" id="databases" class="custom-select">
          <% if(databases.length > 0) { %> 
            <% databases.forEach( (database) => {%>
              <option class="db" 
              data-databasename=<%= database.name %> 
              data-databasesize=<%= database.sizeOnDisk %>
              data-databaseempty=<%= database.empty %>
              value="<%= database.name %>" class="dbOpt"><%= database.name %>
            </option>
            <% }) %> 
          <% } %>
        </select>

        <div class="database-info">
              <div class="row" id="database-size">
                
              </div>
              <div class="row" id="database-empty">
                
              </div>
        </div>
      </div>

      <div class="listCols">
        <h2>Available Collections:</h2>
        <select class="custom-select colsSelect">
        </select>
      </div>

      <div class="createRegister">
        <h2>Add a document to the collection:</h2>
        <%- include("./collectionsForm.ejs") %>
      </div>
    </div>
    <script type="text/javascript" src="/javascripts/main.js"></script>
  </body>
</html>
